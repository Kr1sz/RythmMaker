<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/set_the_tone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="turnOn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/beatPerMinute" app:layout_constraintVertical_bias="0.289"/>
    <EditText
            android:layout_width="101dp"
            android:layout_height="41dp"
            android:ems="10"
            android:id="@+id/beatPerMinute"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="49dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.503" android:text="@string/_19"
            android:textAlignment="center" android:hint="@string/beat_per_mninute" android:inputType="number"
            android:autofillHints=""/>

</android.support.constraint.ConstraintLayout>